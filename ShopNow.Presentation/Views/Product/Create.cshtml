@model ShopNow.Presentation.Models.ProductViewModel.CreateProductViewModel
@{
	ViewBag.Title = "Create New Product";
}

<main class="container mt-4">
	<h1 class="mb-3">@ViewBag.Title</h1>

	<form id="createProductForm" method="post" enctype="multipart/form-data">
		<!-- Name -->
		<div class="mb-3">
			<label asp-for="@Model.CreateProductDTO.Name" class="form-label">Product Name</label>
			<input asp-for="@Model.CreateProductDTO.Name" type="text" class="form-control" required>
			<span asp-validation-for="@Model.CreateProductDTO.Name" class="text-danger"></span>
		</div>

		<!-- Description -->
		<div class="mb-3">
			<label asp-for="@Model.CreateProductDTO.Description" class="form-label">Description</label>
			<textarea asp-for="@Model.CreateProductDTO.Description" class="form-control" rows="3"></textarea>
			<span asp-validation-for="@Model.CreateProductDTO.Description" class="text-danger"></span>
		</div>

		<!-- Price -->
		<div class="mb-3">
			<label asp-for="@Model.CreateProductDTO.Price" class="form-label">Price ($)</label>
			<input asp-for="@Model.CreateProductDTO.Price" type="number" class="form-control" step="0.01" required>
			<span asp-validation-for="@Model.CreateProductDTO.Price" class="text-danger"></span>
		</div>

		<!-- Discount -->
		<div class="mb-3">
			<label asp-for="@Model.CreateProductDTO.Discount" class="form-label">Discount (%)</label>
			<input asp-for="@Model.CreateProductDTO.Discount" type="number" class="form-control" min="0" max="100">
			<span asp-validation-for="@Model.CreateProductDTO.Discount" class="text-danger"></span>
		</div>

		<!-- Quantity -->
		<div class="mb-3">
			<label asp-for="@Model.CreateProductDTO.Quantity" class="form-label">Quantity</label>
			<input asp-for="@Model.CreateProductDTO.Quantity" type="number" class="form-control" required>
			<span asp-validation-for="@Model.CreateProductDTO.Quantity" class="text-danger"></span>
		</div>


		<!-- Featured -->
		<div class="mb-3">
			<label asp-for="@Model.CreateProductDTO.Featured" class="form-label">Featured</label>
			<select asp-for="@Model.CreateProductDTO.Featured" asp-items="@Model.Featured" class="form-control" required>
			</select>
			<span asp-validation-for="@Model.CreateProductDTO.Featured" class="text-danger"></span>
		</div>

		<!-- Product Assets (Multiple File Upload) -->
		<div class="mb-3">
			<label asp-for="@Model.CreateProductDTO.Files" class="form-label">Product Images</label>
			<input asp-for="@Model.CreateProductDTO.Files" type="file" class="form-control" multiple>
			<span asp-validation-for="@Model.CreateProductDTO.Files" class="text-danger"></span>
		</div>

		<!-- Category (Dropdown) -->
		<div class="mb-3">
			<label asp-for="@Model.CreateProductDTO.CategoryId" class="form-label">Category</label>
			<select asp-for="@Model.CreateProductDTO.CategoryId" class="form-control" asp-items="@Model.Categories" required>
			</select>
			<span asp-validation-for="@Model.CreateProductDTO.CategoryId" class="text-danger"></span>
		</div>

		<!-- Submit Button -->
		<button type="submit" class="btn btn-primary">Create Product</button>
	</form>
</main>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}