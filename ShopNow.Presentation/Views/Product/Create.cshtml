@model ShopNow.Presentation.Models.ProductViewModel.CreateProductViewModel
@{
	ViewBag.Title = "Create New Product";
}

<main class="container mt-4">
	<h1 class="mb-3">@ViewBag.Title</h1>

	<form id="createProductForm" enctype="multipart/form-data">
		<!-- Name -->
		<div class="mb-3">
			<label for="name" class="form-label">Product Name</label>
			<input type="text" class="form-control" id="name" name="name" required>
		</div>

		<!-- Slug -->
		<div class="mb-3">
			<label for="slug" class="form-label">Slug</label>
			<input type="text" class="form-control" id="slug" name="slug" required>
		</div>

		<!-- Description -->
		<div class="mb-3">
			<label for="description" class="form-label">Description</label>
			<textarea class="form-control" id="description" name="description" rows="3"></textarea>
		</div>

		<!-- Price -->
		<div class="mb-3">
			<label for="price" class="form-label">Price ($)</label>
			<input type="number" class="form-control" id="price" name="price" step="0.01" required>
		</div>

		<!-- Discount -->
		<div class="mb-3">
			<label for="discount" class="form-label">Discount (%)</label>
			<input type="number" class="form-control" id="discount" name="discount" min="0" max="100">
		</div>

		<!-- Quantity -->
		<div class="mb-3">
			<label asp-for="@Model.CreateProductDTO.Quantity" class="form-label">Quantity</label>
			<input asp-for="@Model.CreateProductDTO.Quantity" type="number" class="form-control" required>
			<span asp-validation-for="@Model.CreateProductDTO.Quantity" class="text-danger"></span>
		</div>

		<!-- Status -->
		<div class="mb-3">
			<label class="form-label">Status</label>
			<select asp-items="@Model.Statuses" class="form-control" required>
			</select>
		</div>

		<!-- Featured -->
		<div class="mb-3">
			<label class="form-label">Featured</label>
			<select asp-items="@Model.Featured" class="form-control" required>
			</select>
		</div>

		<!-- Product Assets (Multiple File Upload) -->
		<div class="mb-3">
			<label asp-for="@Model.CreateProductDTO.Files" class="form-label">Product Images</label>
			<input asp-for="@Model.CreateProductDTO.Files" type="file" class="form-control" multiple>
		</div>

		<!-- Category (Dropdown) -->
		<div class="mb-3">
			<label asp-for="@Model.CreateProductDTO.CategoryId" class="form-label">Category</label>
			<select asp-for="@Model.CreateProductDTO.CategoryId" class="form-control" asp-items="@Model.Categories" required>
			</select>
		</div>

		<!-- Submit Button -->
		<button type="submit" class="btn btn-primary">Create Product</button>
	</form>
</main>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}