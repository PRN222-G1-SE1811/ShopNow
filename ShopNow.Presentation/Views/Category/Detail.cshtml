@model ShopNow.Application.DTOs.Categories.SelectCategoryDTO

@{
    ViewData["Title"] = "Category Detail";
}


<h1>Category Details</h1>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Slug</th>
        <td>@Model.Slug</td>
    </tr>
    <tr>
        <th>Parent Category</th>
        <td>@Model.ParentCategoryName</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Image</th>
        <td>
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="@Model.Image" alt="Category Image" width="100" />
            }
            else
            {
                <span>No image available</span>
            }
        </td>
    </tr>
    <tr>
        <th>Status</th>
        <td>@Model.Status</td>
    </tr>
    <tr>
        <th>Created At</th>
        <td>@Model.CreatedAt</td>
    </tr>
    <tr>
        <th>Updated At</th>
        <td>@Model.UpdatedAt</td>
    </tr>
</table>

<a asp-action="Manage" class="btn btn-secondary">Back to List</a>
