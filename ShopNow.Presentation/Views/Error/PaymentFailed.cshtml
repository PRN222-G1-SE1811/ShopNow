@{
    ViewBag.Title = "Payment Failed";
}

<div class="container text-center">
    <h2>Payment Failed</h2>
    <p>
        @if (!string.IsNullOrEmpty(ViewBag.OrderId))
        {
            <span>Order was not found. Please check and try again.</span>
        }
        else
        {
            <span>The payment was unsuccessful. Please try again.</span>
        }
    </p>
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Return to Homepage</a>
</div>
