@{
    ViewBag.Title = "Payment Successful";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0 rounded">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fa fa-check-circle-o text-success" aria-hidden="true" style="font-size: 4rem;"></i>
                        <i class="fas fa-check-circle text-success" ></i>
                    </div>
                    <h2 class="card-title mb-3 font-weight-bold">Payment Successful!</h2>
                    <div class="card-text mb-4">
                        <p class="lead text-muted">
                            Thank you for your purchase. Your order has been successfully processed.
                        </p>
                        @if (!string.IsNullOrEmpty(ViewBag.OrderId))
                        {
                            <div class="alert alert-info">
                                <strong>Order ID:</strong> #@ViewBag.OrderId
                            </div>
                        }
                        <p class="text-muted">
                            A confirmation email has been sent to your registered email address.
                        </p>
                    </div>
                    <div class="d-flex flex-column flex-sm-row justify-content-center gap-2">
                        <a href="@Url.Action("OrderDetails", "Order", new { id = ViewBag.OrderId })" class="btn btn-primary btn-lg m-1">View Order Details</a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-lg m-1">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}